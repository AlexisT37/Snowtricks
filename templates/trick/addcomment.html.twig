{# twig template with a form to add a comment #}
{% extends 'base.html.twig' %}

{% block title %} Ajouter un commentaire | {{ parent() }}{% endblock %}

{% block body %}

{# a h1 title with nice bootstrap classes #}
<h1 class="text-center text-white p-2">Ajouter un commentaire</h1>


{# minimalistic form #}
<div class="vertical-container">
    <div class="horizontal-container">
        <div class="m-2 p-2">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
