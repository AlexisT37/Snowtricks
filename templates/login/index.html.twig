{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="vertical-container">
        <div class="horizontal-container">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <h1 class="text-center">{{'login' | trans}}</h1>
        
            <div class="form-login m-2 p-2">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="input-group">
                        <label for="username">Email:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="input-group">
                        <label for="password">{{'registration_form.password' | trans}}:</label>
                        <input type="password" id="password" name="_password">
                    </div>
                    <button class="btn btn-success" type="submit">{{'login' | trans}}</button>
                </form>
        
            {# button to reset the password #}
            <a href="{{ path('app_forgot_password_request') }}">{{'forgot_password' | trans}}</a>
            </div>
        </div>
    </div>
    {% include 'footer.html.twig' %}
{% include 'phone.html.twig' %}
{% endblock %}
